<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.google.code.routing4db.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.coach.model.User">
       <id column="id" jdbcType="INTEGER" property="id" />
       <result column="name" jdbcType="CHAR" property="name" />
  </resultMap>
  
  <insert id="insert" parameterType="com.coach.model.User">
    insert into user (name)
    values (#{name})
  </insert>
  
  <select id="getUserById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select id, name
    from user
    where id = #{id}
  </select>
</mapper>